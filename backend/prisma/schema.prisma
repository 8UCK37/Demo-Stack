datasource db {
  provider = "postgresql"
  url      = env("dbUrl")
}

generator client {
  provider        = "prisma-client-js"
}

model User {
  id              String            @id
  createdAt       DateTime          @default(now())
  name            String
  gmailId         String?
  profilePicture  String?
  userInfoId      Int?              @unique
  userInfo        UserInfo?         @relation(fields: [userInfoId], references: [id])
}

model UserInfo {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  Country          String?
  bio              String?
  User             User?
  Address          String?
  Phone            String?
}
